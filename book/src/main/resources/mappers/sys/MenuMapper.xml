<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="project.books.sys.api.menu.MenuMapper">
	
	<!-- 메뉴 목록 -->
	<select id="selectMenuList" parameterType="project.books.sys.api.menu.MenuVO" resultType="project.books.sys.util.CamelMap">
		/*MenuMapper.selectMenuList*/
		select * 
		  from menu m
		 where 1=1 
		<if test='clubNo != null and clubNo != ""'>
		   and m.club_no = #{clubNo}
		</if>
		 order by m.menu_no asc 
	</select>
</mapper>